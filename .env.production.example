# Aurigraph Website - Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://aurigraph:YourSecurePasswordHere@db:5432/aurigraph_website
DB_PASSWORD=YourSecurePasswordHere

# Next.js Configuration
NODE_ENV=production
NEXTAUTH_URL=https://aurigraph.io
NEXTAUTH_SECRET=YourSecureRandomStringGeneratedByOpenssl

# HubSpot CRM Integration
HUBSPOT_API_KEY=pat-YourHubSpotPrivateAppToken

# Email Configuration (for form submissions and admin notifications)
NEXT_PUBLIC_SMTP_HOST=smtp.sendgrid.net
NEXT_PUBLIC_SMTP_PORT=587
NEXT_PUBLIC_SMTP_USER=apikey
NEXT_PUBLIC_SMTP_PASSWORD=SG.YourSendGridAPIKey

# Admin Email (receives form submission notifications)
ADMIN_EMAIL=admin@aurigraph.io

# API Configuration
NEXT_PUBLIC_API_URL=https://aurigraph.io
API_SECRET_KEY=YourSecureAPIKey

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# HubSpot Lists (Optional - for automatic list membership)
HUBSPOT_CONTACT_LIST_ID=your_contact_list_id
HUBSPOT_LEAD_LIST_ID=your_lead_list_id
HUBSPOT_NEWSLETTER_LIST_ID=your_newsletter_list_id
